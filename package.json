{
  "name": "css-in-js-playground",
  "version": "1.0.0",
  "author": "Dustin Schau <dustinschau@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "prebuild": "npm run clean",
    "build": "webpack --hide-modules",
    "postbuild": "npm run copy",
    "build:production": "npm run build -- --env.environment production --hide-modules",
    "clean": "del-cli \"dist/**/*\"",
    "copy": "cp src/manifest.json dist/manifest.json;",
    "format": "npm run format:js & npm run format:ts",
    "format:js": "prettier --write --single-quote \"src/snippets/*.js\"",
    "format:ts": "prettier --write --single-quote --parser typescript \"src/**/*.ts\"",
    "markdown": "md-magic",
    "start": "webpack-dev-server --env.environment development --hot --host 0.0.0.0 --port 8000",
    "test": "jest",
    "test:watch": "npm run test -- --watch"
  },
  "devDependencies": {
    "@types/codemirror": "^0.0.43",
    "@types/jest": "^20.0.6",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^16.0.5",
    "@types/react-dom": "^15.5.4",
    "awesome-typescript-loader": "^3.2.2",
    "css-loader": "^0.28.4",
    "del-cli": "^1.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.1.2",
    "markdown-magic": "^0.1.17",
    "mock-local-storage": "^1.0.4",
    "name-all-modules-plugin": "^1.0.1",
    "prettier": "^1.5.3",
    "raw-loader": "^0.5.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "ts-jest": "^20.0.10",
    "typescript": "^2.4.2",
    "webpack": "^3.5.4",
    "webpack-config-assign": "^1.0.0",
    "webpack-dev-server": "^2.7.1",
    "worker-loader": "^0.8.1"
  },
  "dependencies": {
    "aphrodite": "^1.2.3",
    "buble": "^0.15.2",
    "codemirror": "^5.28.0",
    "cxs": "^5.0.0-1",
    "glamor": "^2.20.40",
    "glamorous": "^4.7.0",
    "history": "^4.6.3",
    "jss": "^8.1.0",
    "jss-preset-default": "^3.0.0",
    "lodash.debounce": "^4.0.8",
    "lodash.kebabcase": "^4.1.1",
    "normalize.css": "^7.0.0",
    "offline-plugin": "^4.8.3",
    "polished": "^1.4.0",
    "query-string": "^5.0.0",
    "radium": "^0.19.4",
    "react": "next",
    "react-dom": "next",
    "react-icons": "^2.2.5",
    "react-jss": "^7.1.0",
    "styled-components": "^2.1.2",
    "styled-jss": "^1.2.0",
    "styletron-react": "^2.5.8",
    "webfontloader": "^1.6.28"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run format:ts",
      "git add"
    ],
    "src/snippets/*.js": [
      "npm run markdown & npm run format:js",
      "git add"
    ]
  }
}
