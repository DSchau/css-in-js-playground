{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["es2015"],
    "paths": {
      "style/*": [
        "./src/style/*"
      ]
    },
    "target": "es5"
  },
  "files": [
    "src/**/*.{ts,tsx}"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}
