{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "lib": ["dom", "es5", "es2015", "webworker"],
    "paths": {
      "style/*": [
        "./src/style/*"
      ]
    },
    "target": "es5"
  },
  "files": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "!node_modules/@types"
  ]
}
